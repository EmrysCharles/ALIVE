@{
    ViewData["Title"] = "vitalsign";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";

}

@*@model Alive.ViewModel.VitalSignViewModel
*@
@model IEnumerable<Alive.Models.VitalSign>

<main id="main" class="main ">

    <section class="section">
        <div class="row">
            <div class="col-4">
                <a asp-controller="Admin" asp-action="VitalCreate" method="post" class="btn btn-primary" >
                                
                      Add Vital sign Modal
                </a>
             </div>
                <div class="col-4">
                    <h2 class="" style="display:flex; text-align:center;justify-content:center;">Patients Vital Sign</h2>
                </div>
        </div>
    </section>

    <!-- Default Card -->
    <section>
                @if (Model.Count()>0)
               {
                    <table id="example" class="table table-striped" style="width:100%">
                        <thead class="bg-danger">
                            <tr>
                               
                                <th scope="col">Visit id</th>

                                <th scope="col">Patient Name</th>
                                <th scope="col">Nurse Name</th>
                                <th scope="col">BP</th>
                                <th scope="col">Pulse Rate</th>
                                <th scope="col">Body Temperature </th>
                                <th scope="col">Body Weight </th>
                                <th scope="col">Body Height </th>
                                <th scope="col">Comment </th>
                                <th scope="col">Action </th>


                            </tr>
                        </thead>
                        <tbody>
                            @*@foreach (var obj in Model.VitalSignTables)
                        *@   
                        @foreach(var obj in Model)
                        {
                                                            
                            <tr>
                                 <td>@obj.VisitId</td>
                                <td>@obj.Name</td>
                                <td>@obj.NurseName</td>
                                <td>@obj.BloodPressure</td>
                                <td>@obj.PulseRate</td>
                                <td>@obj.BodyTemperature</td>
                                <td>@obj.BodyWeight</td>
                                <td>@obj.Height</td>
                                <td>@obj.Comment</td>


                                    <td>
                                        <a asp-controller="Admin" asp-route-id="@obj.Id" asp-action="VitalEdit" class="btn btn-danger">
                            Edit</a></td>



                            </tr>
                            }
                            
                        </tbody>
                         <tfoot class="">
                            <tr>
                               
                                <th scope="col">Visit id</th>

                                <th scope="col">Patient Name</th>
                                <th scope="col">Nurse Name</th>
                                <th scope="col">BP</th>
                                <th scope="col">Pulse Rate</th>
                                <th scope="col">Body Temperature </th>
                                <th scope="col">Body Weight </th>
                                <th scope="col">Body Height </th>
                                <th scope="col">Comment </th>
                                <th scope="col">Action </th>


                            </tr>
                        </tfoot>
                    </table>
                }
                else
                {
                    <p>No Category exists.</p>
                }
                <!-- End Primary Color Bordered Table -->

            

        

            <!-- End Basic Modal-->



    </section>
    


</main><!-- End Default Card -->
