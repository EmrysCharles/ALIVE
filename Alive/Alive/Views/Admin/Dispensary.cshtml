@{
    ViewData["Title"] = "Medicine";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";

}
@model IEnumerable<Alive.Models.Dispensary>
<main id="main" class="main ">


    <section class="section">
        <div class="row">
            <div class="col-4">
                <a asp-controller="Admin" asp-action="DispensaryCreate" method="post" class="btn btn-primary">

                    Add Drugs
                </a>
            </div>



            <div class="col-4">
                <h2 class="" style="display:flex; text-align:center;justify-content:center;">Pharmacy </h2>
            </div>

        </div>
        <div class="row align-items-top">

            <form class="search-form d-flex align-items-center" method="POST" action="#" style="float:right; display:flex; justify-content:end;">

                <input type="text" name="query" placeholder="Search" title="Enter search keyword">
                <button type="submit" title="Search"><i class="bi bi-search"></i></button>
            </form>


        </div>
    </section>

    <!-- Default Card -->
    <section>
        <div class="card" style="width:100%">
            <div class="card-body">
                @if (Model.Count() > 0)
                {

                    <table class="table table-bordered border-primary">
                        <thead class="bg-danger">
                            <tr>
                                <th scope="col">Patient Name</th>
                                <th scope="col">Details</th>
                                <th scope="col">Action/th>
                                 <th scope="col">Created Date</th>
                                <th scope="col"> </th>
                                <th scope="col"> </th>


                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var obj in Model)
                            {


                                <tr>
                                    <td>@obj.Name</td>
                                    <td>@obj.Details</td>
                                    <td>@obj.Action</td>
                                    
                                    <td>@obj.CreatedDate</td>
                                    <td><button type="button" asp-controller="Admin" asp-action="DispensaryEdit" class="btn btn-primary">Edit</button></td>
                                    <td><button type="button" asp-controller="Admin" asp-action="DispensaryDelete" class="btn btn-danger">Delete</button></td>



                                </tr>
                            }


                        </tbody>
                    </table>
                    <!-- End Primary Color Bordered Table -->
                }
            </div>
        </div>




    </section>
</main><!-- End Default Card -->
