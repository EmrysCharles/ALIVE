@{
    ViewData["Title"] = "PharmaInfoCreate";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";

}

@model Alive.Models.PharmaInfo
<main id="main" class="main">



    <section class="section">
        <div class="row">
            <div class="col-lg-6">



                <div class="card">
                    <div class="card-body">

                        <!-- General Form Elements -->
                        <form asp-controller="admin" asp-action="PharmaInfoCreate" method="post">
                            <div asp-validation-summary="ModelOnly" class="text-danger"></div>



                            <div class="row mb-3">
                                <label for="nursenamename" class="col-sm-5 col-form-label">Doctor's Name</label>
                                <div class="col-sm-7">
                                    <input type="text" asp-for="Name" id="DocName" class="form-control">
                                    <span asp-validation-for="Name" class="text-danger"></span>

                                </div>
                            </div>
                            <div class="row mb-3">
                                <label for="email" class="col-sm-5 col-form-label">Email</label>
                                <div class="col-sm-7">
                                    <input type="email" asp-for="Email" id="DocEmail" class="form-control">
                                    <span asp-validation-for="Email" class="text-danger"></span>

                                </div>
                            </div>
                            <div class="row mb-3">
                                <label for="nurseId" class="col-sm-5 col-form-label">Pharma Id</label>
                                <div class="col-sm-7">
                                    <input type="text" asp-for="PharmaId" id="nursId" class="form-control">
                                    <span asp-validation-for="PharmaId" class="text-danger"></span>

                                </div>
                            </div>
                            <div class="row mb-3">
                                <label for="gender" class="col-sm-5 col-form-label">Gender</label>
                                <div class="col-sm-7">
                                    <input type="text" asp-for="Gender" id="dgender" class="form-control">
                                    <span asp-validation-for="Gender" class="text-danger"></span>

                                </div>
                            </div>
                            <div class="row mb-3">
                                <label for="gender" class="col-sm-5 col-form-label">Phone Number</label>
                                <div class="col-sm-7">
                                    <input type="number" asp-for="PhoneNumber" id="docPhone" class="form-control">
                                    <span asp-validation-for="PhoneNumber" class="text-danger"></span>

                                </div>
                            </div>

                            <div class="row mb-3">
                                <label for="DocN" class="col-sm-5 col-form-label">Document</label>
                                <div class="col-sm-7">
                                    <input class="form-control" asp-for="Qualifications" type="file" id="formFile">
                                    <span asp-validation-for="Qualifications" class="text-danger"></span>

                                </div>
                            </div>

                            <div class="row mb-3">
                                <label for="SerialNo" class="col-sm-5 col-form-label">Created Date No</label>
                                <div class="col-sm-7">
                                    <input type="date" asp-for="DateCreated" id="dCreate" class="form-control">
                                    <span asp-validation-for="DateCreated" class="text-danger"></span>

                                </div>
                            </div>

                            <div class="row mb-3">
                                <div class="form-group row ">
                                    <div class="col-8 offset-4 row">
                                        <div class="col mt-3 pt-3">
                                            <input type="submit" class=" btn btn-info w-100" value="Add" />

                                        </div>

                                        <div class="col mt-3 pt-3">
                                            <a asp-action="PharmaInfo" class="btn btn-success w-30">
                                                <i class="fas fa-sign-out-alt"></i> Back
                                            </a>

                                        </div>

                                    </div>
                                </div>

                            </div>

                        </form><!-- End General Form Elements -->

                    </div>
                </div>

            </div>
        </div>
    </section>
</main>
