@{
    ViewData["Title"] = "DocInfo";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
@model Alive.Models.DoctorViewModel
<style>

    body {
        counter-reset: Serial; /* / Set the Serial counter to 0 /*/
    }

    tr td:first-child:before {
        counter-increment: Serial; /* / Increment the Serial counter /*/
        content: counter(Serial); /*  / Display the counter /*/
    }
</style>
<main id="main" class="main ">
    <section class="section">
        <div class="row align-items-top">
            <div class="col-sm-4 col-md-4 col-xl-4">
            </div>
            <div class="col-sm-4 col-md-4 col-xl-4">
                <h2 class="mx-4" style="display:flex; text-align:center;justify-content:center; color:lightseagreen">Doctor's List</h2>
            </div>
            <div class="col-sm-4 col-md-4 col-xl-4">
                <a asp-controller="Admin" method="post" class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#basicModal" style="float:right">
                    <i class="ri-add-circle-fill" style="color:white;"></i> Add doctor
                </a>
            </div>
        </div>
        <div class="row align-items-top">
            <form class="search-form d-flex align-items-center" method="POST" action="#" style="float:right; display:flex; justify-content:end;">
                <input type="text" name="query" placeholder="Search" title="Enter search keyword">
                <button type="submit" title="Search"><i class="bi bi-search"></i></button>
            </form>
        </div>
    </section>
    <!-- Default Card -->
    <section>
        <input type="hidden" id="checkupId" />
        <table class="table table-stripped mt-3" id="example" style="width:100%;">
            <thead class="" style="background-color:whitesmoke; color:darkblue">
                <tr>
                    <th scope="col">
                        #<i class="ri-arrow-up-down-line" style="margin-left: 30px; color:red"></i>
                    </th>

                    <th scope="col">
                        Doctor Name<i class="ri-arrow-up-down-line" style="margin-left: 30px; color:red"></i>
                    </th>
                    <th scope="col">
                        Email<i class="ri-arrow-up-down-line" style="margin-left: 30px; color:red"></i>
                    </th>
                    <th scope="col">
                        Phone Number<i class="ri-arrow-up-down-line" style="margin-left: 30px; color:red"></i>
                    </th>
                    <th scope="col">
                        Category<i class="ri-arrow-up-down-line" style="margin-left: 30px; color:red"></i>
                    </th>
                    <th scope="col">
                        Country<i class="ri-arrow-up-down-line" style="margin-left: 30px; color:red"></i>
                    </th>
                    <th scope="col">
                        Gender<i class="ri-arrow-up-down-line" style="margin-left: 30px; color:red"></i>
                    </th>


                    <th scope="col">
                        Action<i class="ri-arrow-up-down-line" style="margin-left: 30px; color:red"></i>
                    </th>
                </tr>
            </thead>
            <tbody>
                @foreach (var obj in Model.DocInfos)
                {
                    <tr>
                        <td></td>
                        <td>@obj.Name</td>
                        <td>@obj.Email</td>
                        <td>@obj.PhoneNumber</td>
                        <td>@obj.Category</td>
                        <td>@obj.Country</td>
                        <td>@obj.Gender</td>

                        <td>
                            <a class="btn btn-primary" onclick="EditDoc('@obj.Id')" id="EditForm" data-bs-toggle="modal" data-bs-target="#largeModal">
                                Edit
                            </a>
                            <a id="showModal" onclick="ConfirmDocDelete('@obj.Id')" class="btn btn-danger" data-bs-toggle="modal" data-bs-target="#deleteModal">
                                Delete
                            </a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>

        <!-- End Primary Color Bordered Table -->
        @*crete modal*@
        <div class="modal fade" id="basicModal">
            <div class="modal-dialog modal-lg">
                <div class="modal-content">
                    <div class="modal-header">
                        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                    </div>
                    <div class="modal-body">
                        <div class="card">
                            <div class="card-body">
                                <h5 class="card-title" id="exampleModalLabel">Add a Doctor</h5>
                                <!-- Default Tabs -->
                                <div class="row">
                                    <div class="col-6">
                                        <div class="col-12">
                                            <input class="updateId" type="hidden" id="doctorId" />
                                        </div>
                                        <div class="col-12">
                                            <label><b>Doctor Name</b></label>
                                            <input type="text" id="docname" class="form-control">
                                        </div>
                                        <div class=" col-12 ">
                                            <label><b>Email</b></label>
                                            <input type="text" id="email" class="form-control">
                                        </div>
                                        <div class="col-12 ">
                                            <label><b>Gender</b></label>
                                            <input type="text" id="gender" class="form-control">
                                        </div>
                                    </div>
                                    <div class="col-6">
                                        <div class="col-12 ">
                                            <label><b>Phone Number</b></label>
                                            <input type="text" id="phonenumber" class="form-control">
                                        </div>
                                        <div class="col-12 ">
                                            <label><b>Category</b></label>
                                            <input type="text" id="category" class="form-control">
                                        </div>
                                         <div class="col-12 ">
                                        <label><b>Country</b></label>
                                        <input type="text" id="country" class="form-control">
                                    </div>
                                    </div>

                                    <div class="modal-footer">
                                        <button type="button" class="btn btn-secondary btnCancel" data-dismiss="modal">close</button>
                                        <button type="submit" onclick="DocCreate()" class="btn btn-success ">Add</button>
                                    </div>
                                </div>
                                <!-- End General Form Elements -->

                            </div>

                        </div>
                    </div>

                </div>
            </div>
        </div>
        @*Edit Modal*@

        <div class="modal fade" id="largeModal" tabindex="-1">
            <div class="modal-dialog modal-lg">
                <div class="modal-content">
                    <div class="modal-header">
                        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                    </div>
                    <div class="modal-body">
                        <div class="card">
                            <div class="card-body">
                                <h5 class="card-title" id="exampleModalLabel">Add a Doctor</h5>
                                <!-- Default Tabs -->
                                <div class="row">
                                    <div class="col-6">
                                        <div class="col-12">
                                            <input class="updateId" type="hidden" id="editId" />
                                        </div>
                                        <div class="col-12">
                                            <label><b>Doctor Name</b></label>
                                            <input type="text" id="docnameEdit" class="form-control">
                                        </div>
                                        <div class=" col-12 ">
                                            <label><b>Email</b></label>
                                            <input type="text" id="emailEdit" class="form-control">
                                        </div>
                                        <div class="col-12 ">
                                            <label><b>Gender</b></label>
                                            <input type="text" id="genderEdit" class="form-control">
                                        </div>
                                    </div>
                                    <div class="col-6">
                                        <div class="col-12 ">
                                            <label><b>Phone Number</b></label>
                                            <input type="text" id="phonenumberEdit" class="form-control">
                                        </div>
                                        <div class="col-12 ">
                                            <label><b>Category</b></label>
                                            <input type="text" id="categoryEdit" class="form-control">
                                        </div>
                                        <div class="col-12 ">
                                            <label><b>Country</b></label>
                                            <input type="text" id="countryEdit" class="form-control">
                                        </div>
                                    </div>

                                    <div class="modal-footer">
                                        <button type="button" class="btn btn-secondary btnCancel" data-dismiss="modal">close</button>
                                        <button type="submit" onclick="DocEdit()" class="btn btn-success ">Add</button>
                                    </div>
                                </div>
                                <!-- End General Form Elements -->

                            </div>

                        </div>
                    </div>

                </div>
            </div>
        </div>

        <div class="modal fade" id="deleteModal" tabindex="-1">
            <div class="modal-dialog modal-lg">
                <div class="modal-content">
                    <div class="modal-header">
                        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                    </div>
                    <div class="modal-body">
                        <div class="card">
                            <div class="card-body">
                                <h5 class="card-title" id="exampleModalLabel">Delete Docter</h5>
                                <!-- Default Tabs -->

                                <div class="row">
                                    <div class="col-6">
                                        <div class="col-12">
                                            <input type="hidden" id="deleteId" />
                                            <h1>Are you sure you want to delete this Lab?</h1>
                                        </div>
                                    </div>
                                </div><!-- End General Form Elements -->
                                <div class="modal-footer">
                                    <button type="button" class="btn btn-secondary btnCancel" data-dismiss="modal">close</button>
                                    <button onclick="DeleteDoc()" type="button" class="btn btn-danger ">Delete</button>
                                </div>
                            </div>

                        </div>
                    </div>

                </div>
            </div>
        </div>

        @section scripts {
            @{
                await Html.RenderPartialAsync("_ValidationScriptsPartial");
            }

        }


    </section>


</main>