@{
    ViewData["Title"] = "Appointment";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
@model Alive.Models.AppointmentViewModel
<style>

    body {
        counter-reset: Serial; /* / Set the Serial counter to 0 /*/
    }

    tr td:first-child:before {
        counter-increment: Serial; /* / Increment the Serial counter /*/
        content: counter(Serial); /*  / Display the counter /*/
    }
</style>
<main id="main" class="main ">
    <section class="section">
        <div class="row align-items-top">
            <div class="col-sm-4 col-md-4 col-xl-4">
            </div>
            <div class="col-sm-4 col-md-4 col-xl-4">
                <h2 class="mx-4" style="display:flex; text-align:center;justify-content:center; color:lightseagreen">Appointment List</h2>
            </div>
            <div class="col-sm-4 col-md-4 col-xl-4">
                
            </div>
        </div>
        <div class="row align-items-top">
            
        </div>
    </section>
    <!-- Default Card -->
    <section>
        <input type="hidden" id="checkupId" />
        @if(Model.patientAppointments != null && Model.patientAppointments.Count() > 0)
        {
        <table class="table table-stripped mt-3" id="example" style="width:100%;">
            <thead class="" style="background-color:whitesmoke; color:darkblue">
                <tr>
                    <th scope="col">
                        #<i class="ri-arrow-up-down-line" style="margin-left: 30px; color:red"></i>
                    </th>

                    <th scope="col">
                        Patient Name<i class="ri-arrow-up-down-line" style="margin-left: 30px; color:red"></i>
                    </th>
                    <th scope="col">
                        Email<i class="ri-arrow-up-down-line" style="margin-left: 30px; color:red"></i>
                    </th>
                    <th scope="col">
                        Phone Number<i class="ri-arrow-up-down-line" style="margin-left: 30px; color:red"></i>
                    </th>
                    <th scope="col">
                        Complaints<i class="ri-arrow-up-down-line" style="margin-left: 30px; color:red"></i>
                    </th>
                    <th scope="col">
                        Appointment date<i class="ri-arrow-up-down-line" style="margin-left: 30px; color:red"></i>
                    </th>
                    <th scope="col">
                        Created Date<i class="ri-arrow-up-down-line" style="margin-left: 30px; color:red"></i>
                    </th>
                    <th scope="col">
                        Action<i class="ri-arrow-up-down-line" style="margin-left: 30px; color:red"></i>
                    </th>
                </tr>
            </thead>
            <tbody>
                @foreach (var obj in Model.patientAppointments)
                {
                <tr>
                    <td></td>
                    <td>@obj.Name</td>
                    <td>@obj.Email</td>
                    <td>@obj.PhoneNumber</td>
                    <td>@obj.Description</td>

                    <td>@obj.AppointmentDate</td>
                    <td>@obj.DateCreated</td>
                    <td>
                        <a class="btn btn-primary" onclick="EditAppForm(@obj.Id)" data-bs-toggle="modal" data-bs-target="#largeModal">
                            Edit
                        </a>
                        <a id="showModal" onclick="ConfirmAppDelete(@obj.Id)" class="btn btn-danger" data-bs-toggle="modal" data-bs-target="#deleteModal">
                            Delete
                        </a>
                    </td>
                </tr>
                }
            </tbody>
        </table>
        }
        else
        {
            <div class="text-center">

                <h1> No record found </h1>

            </div>
        }

 <!-- End Primary Color Bordered Table -->
        @*crete modal*@
        <div class="modal fade" id="largeModal">
            <div class="modal-dialog modal-lg">
                <div class="modal-content">
                    <div class="modal-header">
                        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                    </div>
                    <div class="modal-body">
                        <div class="card">
                            <div class="card-body">
                                <h5 class="card-title" id="exampleModalLabel">Approve Appointment</h5>
                                <!-- Default Tabs -->
                                <div class="row">
                                    <div class="col-6">
                                        <div class="col-12">
                                            <input class="updateId" type="hidden" id="appointmentId" />
                                        </div>
                                        <div class="col-12">
                                            <label><b>Patient Name</b></label>
                                            <input type="text" id="patientName" class="form-control">
                                        </div>
                                        <div class=" col-12 ">
                                            <label><b>Email</b></label>
                                            <input type="text" id="patientEmail" class="form-control">
                                        </div>
                                    </div>
                                    <div class="col-6">
                                        <div class="col-12 ">
                                            <label><b>Phone number</b></label>
                                            <input type="text" id="patientphone" class="form-control">
                                        </div>
                                        <div class="col-12 ">
                                            <label><b>Appointment Date</b></label>
                                            <input type="date" id="patientdate" class="form-control">
                                        </div>
                                        <div class="col-12 ">
                                            <label><b>Created Date</b></label>
                                            <input type="date" id="datecreated" class="form-control">
                                        </div>

                                    </div>
                                    <div class="col-12 ">
                                        <label><b>Patient Complaints</b></label>
                                        <textarea id="description" class="form-control"></textarea>
                                    </div>
                                    <div class="modal-footer">
                                        <button type="button" action="action" onclick="window.history.go(-1); return false;" class="btn btn-secondary btnCancel" data-dismiss="modal">close</button>
                                        <button type="submit" onclick="SaveEditAppointment()" class="btn btn-success ">Add</button>
                                    </div>
                                </div>
                                <!-- End General Form Elements -->

                            </div>

                        </div>
                    </div>

                </div>
            </div>
        </div>
        @*Edit Modal*@



        <div class="modal fade" id="deleteModal" tabindex="-1">
            <div class="modal-dialog modal-lg">
                <div class="modal-content">
                    <div class="modal-header">
                        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                    </div>
                    <div class="modal-body">
                        <div class="card">
                            <div class="card-body">
                                <h5 class="card-title" id="exampleModalLabel">Decline Patient</h5>
                                <!-- Default Tabs -->

                                <div class="row">
                                    <div class="col-6">
                                        <div class="col-12">
                                            <input type="hidden" id="deleteId" />
                                            <h1>Are you sure you want to delete this Lab?</h1>
                                        </div>
                                    </div>
                                </div><!-- End General Form Elements -->
                                <div class="row d-flex justify-content-center">
                                    <div class="col-6" style="border-radius:50%">
                                        <button type="button" class="btn btn-secondary btnCancel w-100" data-dismiss="modal">close</button>
                                     </div>
                                    <div class="col-6" style="border-radius:50%">
                                        <button onclick="DeleteAppointment()" type="button" class="btn btn-danger w-100 " >Delete</button>
                                    </div>
                                </div>
                            </div>

                        </div>
                    </div>

                </div>
            </div>
        </div>

        @section scripts {
            @{
                await Html.RenderPartialAsync("_ValidationScriptsPartial");
            }

        }


    </section>


</main>