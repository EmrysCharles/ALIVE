@{
    ViewData["Title"] = "Labtest";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
@model Alive.Models.LabTestViewModel
<style>

    body {
        counter-reset: Serial; /* / Set the Serial counter to 0 /*/
    }

    tr td:first-child:before {
        counter-increment: Serial; /* / Increment the Serial counter /*/
        content: counter(Serial); /*  / Display the counter /*/
    }
</style>
<main id="main" class="main ">
    <section class="section">
        <div class="row align-items-top">
            <div class="col-sm-4 col-md-4 col-xl-4">
            </div>
            <div class="col-sm-4 col-md-4 col-xl-4">
                <h2 class="mx-4" style="display:flex; text-align:center;justify-content:center; color:lightseagreen">Patient List</h2>
            </div>
            <div class="col-sm-4 col-md-4 col-xl-4">
                <a asp-controller="Admin" method="post" class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#basicModal" style="float:right">
                    <i class="ri-add-circle-fill" style="color:white;"></i> Add Nurse
                </a>
            </div>
        </div>
        <div class="row align-items-top">
            <form class="search-form d-flex align-items-center" method="POST" action="#" style="float:right; display:flex; justify-content:end;">
                <input type="text" name="query" placeholder="Search" title="Enter search keyword">
                <button type="submit" title="Search"><i class="bi bi-search"></i></button>
            </form>
        </div>
    </section>
    <!-- Default Card -->
    <section>
            <input type="hidden" id="checkupId" />
            <table class="table table-stripped mt-3" id="example" style="width:100%;">
                <thead class="" style="background-color:whitesmoke; color:darkblue">
                    <tr>
                        <th scope="col">
                            #<i class="ri-arrow-up-down-line" style="margin-left: 30px; color:red"></i>
                        </th>

                        <th scope="col">
                           Lab Test<i class="ri-arrow-up-down-line" style="margin-left: 30px; color:red"></i>
                        </th>
                        <th scope="col">
                            Lab Test Category<i class="ri-arrow-up-down-line" style="margin-left: 30px; color:red"></i>
                        </th>
                        <th scope="col">
                            Unit Price<i class="ri-arrow-up-down-line" style="margin-left: 30px; color:red"></i>
                        </th>
                        <th scope="col">
                            Reference range<i class="ri-arrow-up-down-line" style="margin-left: 30px; color:red"></i>
                        </th>
                        <th scope="col">
                            Created Date<i class="ri-arrow-up-down-line" style="margin-left: 30px; color:red"></i>
                        </th>

                       
                        <th scope="col">
                            Action<i class="ri-arrow-up-down-line" style="margin-left: 30px; color:red"></i>
                        </th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var obj in Model.LabTests)
                    {
                        <tr>
                            <td></td>
                            <td>@obj.LabTestName</td>
                            <td>@obj.TestCategory</td>
                            <td>@obj.UnitPrice</td>
                            <td>@obj.ReferenceRange</td>
                            <td>@obj.DateCreated</td>
                             <td>
                                <a class="btn btn-primary" onclick="EditForm(@obj.Id)" id="EditForm" data-bs-toggle="modal" data-bs-target="#largeModal">
                                    Edit
                                </a>
                            <a id="showModal" onclick="ConfirmDelete(@obj.Id)" class="btn btn-danger" data-bs-toggle="modal" data-bs-target="#deleteModal">
                                    Delete
                                </a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
            
            <!-- End Primary Color Bordered Table -->
       
@*crete modal*@
        <div class="modal fade" id="basicModal">
            <div class="modal-dialog modal-lg">
                <div class="modal-content">
                    <div class="modal-header">
                          <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                    </div>
                    <div class="modal-body">
                        <div class="card">
                            <div class="card-body">
                                <h5 class="card-title" id="exampleModalLabel">Add Lab Test</h5>
                                <!-- Default Tabs -->
                                <div class="row">
                                    <div class="col-6">
                                        <div class="col-12">
                                            <input class="updateId" type="hidden" id="LabTestId" />
                                        </div>
                                        <div class="col-12">
                                            <label><b>Test Name</b></label>
                                            <input type="text" id="testName" class="form-control">
                                        </div>
                                        <div class=" col-12 ">
                                            <label><b>Test Category</b></label>
                                            <input type="text" id="testCategory" class="form-control">
                                        </div>
                                    </div>
                                    <div class="col-6">
                                        <div class="col-12 ">
                                            <label><b>Unit Price</b></label>
                                            <input type="text" id="unitPrice" class="form-control">
                                        </div>
                                        <div class="col-12 ">
                                            <label><b>Date Created</b></label>
                                            <input type="date" id="dateCreated" class="form-control">
                                        </div>
                                    </div>
                                    <div class="col-12 ">
                                        <label><b>Reference range</b></label>
                                        <input type="text" id="reference" class="form-control">
                                    </div>
                                    <div class="modal-footer">
                                        <button type="button" class="btn btn-secondary btnCancel" data-dismiss="modal">close</button>
                                        <button type="submit" onclick="labtestCreate()" class="btn btn-success ">Add</button>
                                    </div>
                                </div>
                                <!-- End General Form Elements -->

                            </div>

                        </div>
                    </div>

                </div>
            </div>
        </div>
@*Edit Modal*@
           
         <div class="modal fade" id="largeModal" tabindex="-1">
            <div class="modal-dialog modal-lg">
                <div class="modal-content">
                                
                    <div class="modal-header">
                        <h5 class="modal-title">Add Test</h5>
                        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                    </div>
                    <div class="modal-body">
                        <div class="card">
                            <div class="card-body">
                                <h5 class="card-title">Add Test Details</h5>
                                <!-- Default Tabs -->
                              
                                <div class="form-group" method="post">
                                     <div class="row">
                                        <div class="col-6">
                                            <div class="col-12">
                                                <input class="updateId" type="hidden" id="editId" />
                                            </div>
                                            <div class="col-12">
                                                 <label class="col-form-label"><b>Test Name</b></label>
                                                <input type="text" id="edittestName" class="form-control">
                                                 </div>
                                            <div class=" col-12 ">
                                                <label for="email"  class=" col-form-label"><b>Test Category</b></label>
                                                <input type="text"  id="edittestCategory" class="form-control">
                                                
                                            </div>
                                         </div>
                                            <div class="col-6">
                                                <div class="col-12 ">
                                                    <label for="number"  class=" col-form-label"><b>Unit Price</b></label>
                                                    <input type="text" id="editunitPrice" class="form-control">
                                                    
                                                </div>
                                                <div class="col-12 ">
                                                    <label  class="col-form-label"><b>Date Created</b></label>
                                                <input type="date" id="editdatecreated" class="form-control">
                                            </div>
                                            </div>
                                            <div class="col-12 ">
                                                <label  class=" col-form-label"><b>Reference range</b></label>
                                                <input type="text" id="editreference"  class="form-control">
                                                
                                            </div>


                                            <div class="modal-footer">
                                                <button type="button" class="btn btn-secondary btnCancel" data-dismiss="modal">close</button>
                                            <button id="btnSave" onclick="SaveEditLabTest()" type="button" class="btn btn-success ">Update changes</button>
                                            </div>
                                     </div>
                                 </div>
                              
                             </div>

                         </div>
                    </div>
                 

                </div>
             </div>
        </div>

        <div class="modal fade" id="deleteModal" tabindex="-1">
            <div class="modal-dialog modal-lg">
                <div class="modal-content">
                    <div class="modal-header">
                          <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                    </div>
                    <div class="modal-body">
                        <div class="card">
                            <div class="card-body">
                                <h5 class="card-title" id="exampleModalLabel">Delete Lab Test</h5>
                                <!-- Default Tabs -->

                                      <div class="row">
                                        <div class="col-6">
                                            <div class="col-12">
                                            <input type="hidden" id="deleteId" />
                                                <h1>Are you sure you want to delete this Lab?</h1>
                                            </div>
                                        </div>
                                    </div><!-- End General Form Elements -->
                                    <div class="modal-footer">
                                        <button type="button" class="btn btn-secondary btnCancel" data-dismiss="modal">close</button>
                                    <button  onclick="DeleteLab()" type="button" class="btn btn-danger ">Delete</button>
                                    </div>
                                  </div>

                        </div>
                    </div>

                </div>
            </div>
        </div>

        @section scripts {
            @{
                await Html.RenderPartialAsync("_ValidationScriptsPartial");
            }

    }
    

    </section>


</main>