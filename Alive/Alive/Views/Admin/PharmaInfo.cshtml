@{
    ViewData["Title"] = "PharmaInfo";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";

}
@model IEnumerable<Alive.Models.PharmaInfo>


<main id="main" class="main ">


    <section class="section">
        <div class="row">
            <div class="col-4">
                <a asp-controller="Admin" asp-action="PharmaInfoCreate" method="post" class="btn btn-primary">

                    Add Doctor
                </a>


            </div>




            <div class="col-4">
                <h2 class="" style="display:flex; text-align:center;justify-content:center;">Doctor's Info</h2>
            </div>

        </div>
        <div class="row align-items-top">

            <form class="search-form d-flex align-items-center" method="POST" action="#" style="float:right; display:flex; justify-content:end;">

                <input type="text" name="query" placeholder="Search" title="Enter search keyword">
                <button type="submit" title="Search"><i class="bi bi-search"></i></button>
            </form>


        </div>
    </section>

    <!-- Default Card -->
    <section>
        <div class="card" style="width:100%">
            <div class="card-body">
                @if (Model.Count() > 0)
                {
                    <table class="table table-bordered border-primary">
                        <thead class="bg-danger">
                            <tr>
                                <th scope="col">Doctor's Name</th>
                                <th scope="col">Email</th>
                                <th scope="col">Pharma Id</th>
                                <th scope="col">Gender</th>
                                <th scope="col">Phone Number</th>

                                <th scope="col">Category</th>

                                <th scope="col">Qualifications</th>

                                <th scope="col">Created Date</th>
                                <th scope="col"> </th>


                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var obj in Model)
                            {
                                <tr>
                                    <td>@obj.Name</td>
                                    <td>@obj.Email</td>
                                    <td>@obj.PharmaId</td>
                                    <td>@obj.Gender</td>
                                    <td>@obj.PhoneNumber</td>
                                    <td>@obj.Category</td>

                                    <td><button type="button" class="btn btn-danger">@obj.Qualifications</button>Qualification</td>

                                    <td>@obj.DateCreated</td>
                                    <td>
                                        <a asp-controller="admin" asp-action="PharmaInfoEdit" asp-route-id="@obj.Id" class="btn btn-danger">
                                            Edit
                                        </a>
                                    </td>


                                </tr>
                            }
                        </tbody>
                    </table>
                }
                <!-- End Primary Color Bordered Table -->

            </div>
        </div>




    </section>


</main>