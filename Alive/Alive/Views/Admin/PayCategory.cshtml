@{
    ViewData["Title"] = "PayCategory";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";

}
@model IEnumerable<Alive.Models.PayCategory>
<main id="main" class="main ">


    <section class="section">
        <div class="row">
            <div class="col-4">
                <a asp-controller="Admin" asp-action="PayCategoryCreate" method="post" class="btn btn-primary">

                    Add Patient Appointment
                </a>
            </div>


            <div class="col-4">
                <h2 class="" style="display:flex; text-align:center;justify-contentcenter;">Expenses List</h2>
            </div>

        </div>
        <div class="row align-items-top">

            <form class="search-form d-flex align-items-center" method="POST" action="#" style="float:right; display:flex; justify-content:end;">

                <input type="text" name="query" placeholder="Search" title="Enter search keyword">
                <button type="submit" title="Search"><i class="bi bi-search"></i></button>
            </form>


        </div>
    </section>

    <!-- Default Card -->
    <section>
        <div class="card" style="width:100%">
            <div class="card-body">
                @if (Model.Count() > 0)
                {



                    <table class="table table-bordered border-primary">
                        <thead class="bg-danger">
                            <tr>
                                <th scope="col">Name</th>
                                <th scope="col">Description</th>
                                <th scope="col">Created Date</th>
                                <th scope="col"> </th>
                                <th scope="col"> </th>


                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var obj in Model)
                            {


                                <tr>
                                    <td>@obj.Name </td>
                                    <td>>@obj.Description</td>

                                    <td>>@obj.CreatedDate</td>
                                    <td><button type="button" asp-controller="admin" asp-action="PayCategoryCreate" class="btn btn-primary">Edit</button></td>
                                    <td><button type="button" asp-controller="admin" asp-action="PayCategoryDelete" class="btn btn-danger">Delete</button></td>



                                </tr>
                            }
                        </tbody>
                    </table>
                }
                <!-- End Primary Color Bordered Table -->

            </div>
        </div>




    </section>
</main><!-- End Default Card -->
